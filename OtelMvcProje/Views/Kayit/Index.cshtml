@model OtelMvcProje.Models.Entity.TblYeniKayit
@{
    Layout = null;
}


<html lang="tr">
<head>
    <title>Otel Kayıt Formu</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Account Register Form Responsive Widget,Login form widgets, Sign up Web forms , Login signup Responsive web form,Flat Pricing table,Flat Drop downs,Registration Forms,News letter Forms,Elements" />
    <script type="application/x-javascript">
         addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
        function hideURLbar(){ window.scrollTo(0,1); } </script>

    <link rel="stylesheet" href="~/Content/Kayit/css/style.css" type="text/css" media="all" />
    <link rel="stylesheet" href="~/Content/Kayit/css/font-awesome.css">
    <link href="//fonts.googleapis.com/css?family=Noto+Sans:400,400i,700,700i&amp;subset=cyrillic,cyrillic-ext,devanagari,greek,greek-ext,latin-ext,vietnamese" rel="stylesheet">


</head>
<body>

    <div class="w3ls-header">
        <h1>Otel Misafir Kayıt Sayfası</h1>
        <div class="header-main">
            <h2>Kayıt Formu</h2>
            <div class="header-bottom">
                <div class="header-right w3agile">
                    <div class="header-left-bottom agileinfo">
                        <form method="post">
                            <div class="icon1">
                                <i class="fa fa-user" aria-hidden="true"></i>
                                <input type="text" placeholder="Ad Soyad" name="AdSoyad" required="" />
                            </div>
                            <div class="icon1">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                                <input type="email" placeholder="Mail" name="Mail" required="" />
                            </div>
                            <div class="icon1">
                                <i class="fa fa-phone" aria-hidden="true"></i>
                                <input type="tel" placeholder="Telefon" name="Telefon" required="" />
                            </div>
                            <div class="icon1">
                                <i class="fa fa-lock" aria-hidden="true"></i>
                                <input type="password" placeholder="Şifre" name="Sifre" required="" />
                            </div>
                            <div class="login-check">
                                <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i> </i> Kullanıcı şartlarını okudum <a href="#">kabul &amp; ediyorum</a></label>
                            </div>
                            <div class="bottom">
                                <input type="submit" value="Kayıt Ol" />
                            </div>
                            <div class="social w3layouts">
                                <p>Zaten hesabın var mı? <a href="/Login/Index">Giriş Yap</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="copyright">
        <p>© 2023 Account Register Form. Tüm Hakları Saklıdır</p>
    </div>
</body>
</html>